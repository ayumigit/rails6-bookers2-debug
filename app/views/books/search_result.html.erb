<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if @range == "User" %>
  <h2>Users search for "<%= (@word) %>"</h2>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag @user.get_profile_image(50,50) %><% end %>
          </td>
          <td><%= link_to book.title, book_path(book) %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>

</table>