<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if users.exists? %>
      <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50,50) %></td>
      <td><%= user.name %></td>
      <td>follows: <%= user.followings.count %></td>
      <td>followers: <%= user.followers.count %></td>
      <td><%= link_to 'Show', user %></td>
    </tr>
    <% end %>

    <% else %>
      <p>ユーザーはいません</p>

    <% end %>

  </tbody>
</table>